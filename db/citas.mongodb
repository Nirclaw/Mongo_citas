        "cit_estadoCita",
        "cit_medico",
        "cit_datosUsuario",
      ],
      properties: {
        cit_codigo: {
          bsonType: "int",
          description: "el tipo de dato es incorrecto",
        },
        cit_fecha: {
          bsonType: "string",
          description: "el tipo de dato es incorrecto",
        },
        cit_estadoCita: {
          enum: [
            "Activa",
            "Espera",
            "Cancelada",
