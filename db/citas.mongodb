use("Mongo_Citas");
db.createCollection("usuario", {
  validator: {
    $jsonSchema: {
      bsonType: "object",
      title: "usuarios",
      required: [
        "usu_nombre_completo",
        "usu_telefono",
        "usu_direccion",
        "usu_email",
        "usu_documento",
        "usu_genero",
        "usu_acudiente",
      ],
      properties: {
        usu_nombre_completo: {
          bsonType: "string",
          description: "el tipo de dato es incorrecto",
        },
        usu_telefono: {
          bsonType: "string",
          description: "el tipo de dato es incorrecto",
        },
        usu_direccion: {
          bsonType: "string",
          description: "el tipo de dato es incorrecto",
        },
        usu_email: {
          bsonType: "string",
          description: "el tipo de dato es incorrecto",
        },
        usu_documento: {
          bsonType: "object",
          required: ["tipo_doc", "numero"],
          properties: {
            tipo_doc: {
              enum: ["CC", "TI", "PP"],
              description: "los tipos de documentos deben ser CC, TI, PP ",
            },
            numero: {
              bsonType: "int",
              description: "el tipo de dato es incorrecto",
            },
          },
        },
        usu_genero: {
          enum: ["M", "F", "NI"],
        },
        usu_acudiente: {
          bsonType: "object",
          required: [
            "acu_cedula",
            "acu_nombre_completo",
            "acu_telefono",
            "acu_direccion",
          ],
          properties: {
            acu_cedula: {
              bsonType: "int",
              description: "el tipo de dato es incorrecto",
            },
            acu_nombre_completo: {
              bsonType: "string",
              description: "el tipo de dato es incorrecto",
            },
            acu_telefono: {
              bsonType: "string",
              description: "el tipo de dato es incorrecto",
            },
            acu_direccion: {
              bsonType: "string",
              description: "el tipo de dato es incorrecto",
            },
          },
        },
      },
    },
  },
});

use("Mongo_Citas");
